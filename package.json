{
    "name": "ventscape",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "npm run client && npm run server",
        "client": "cd packages/client && npm run dev",
        "server": "cd packages/server && npm start",
        "prepare": "husky install",
        "schema": "npx prisma db pull --schema=packages/server/prisma/schema.prisma",
        "generate": "npx prisma generate --schema=packages/server/prisma/schema.prisma",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" "
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^8.0.3",
        "prettier": "3.2.5"
    },
    "workspaces": [
        "packages/*"
    ]
}
