{
    "name": "ventscape",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "npm run client && npm run server",
        "client": "cd packages/client && npm run dev",
        "server": "cd packages/server && npm start",
        "schema": "npx prisma db pull --schema=packages/server/prisma/schema.prisma",
        "generate": "npx prisma generate --schema=packages/server/prisma/schema.prisma"
    },
    "devDependencies": {
        "husky": "^8.0.3"
    },
    "workspaces": [
        "packages/*"
    ]
}
