{
    "compilerOptions": {
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "baseUrl": "src",
        "isolatedModules": true,
        "noEmit": true,
        "paths": {
            "routes/*": ["routes/*"],
            "pages/*": ["pages/*"],
            "components/*": ["components/*"],
            "ui/*": ["components/ui/*"],
            "services/*": ["services/*"],
            "hooks/*": ["hooks/*"],
            "utils/*": ["utils/*"],
            "types/*": ["types/*"],
            "store/*": ["store/*"],
            "features/*": ["features/*"],
            "config/*": ["config/*"]
        }
    },
    "include": ["src", "vite.config.ts"],
    "extends": "../../tsconfig.base.json",
    "references": [{ "path": "./tsconfig.node.json" }]
}
